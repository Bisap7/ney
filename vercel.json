cat > vercel.json << 'EOF'
{
  "version": 3,
  "routes": [
    {
      "src": "/(.*\.(jpg|png|jpeg|mp4))",
      "headers": {
        "Cache-Control": "public, max-age=31536000",
        "Access-Control-Allow-Origin": "*"
      },
      "continue": true
    },
    {"handle": "filesystem"},
    {"src": "/(.*)", "dest": "/index.html"}
  ]
}
EOF